<% if (message && message.length > 0) { %>
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <%= message %>
            </div>
<% } %>
<% if (success && success.length > 0) { %>
   
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <%= success %>
            </div>
       
<% } %>